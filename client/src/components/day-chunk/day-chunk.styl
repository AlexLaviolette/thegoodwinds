@import '~@/styles/mixins'
@import '~@/styles/variables'

.chunk
  width: 100%
  display: flex
  flex-direction: column
  align-items: flex-start
  box-shadow: 39px -30px 44px -63px rgba(0,0,0,0.83) inset
  border-bottom: 1px solid rgba(0,0,0,0.3)
  border-right: 1px solid rgba(0,0,0,0.3)

  &.weather-rating-1
    background-color: lighten($pistachio, 15%)
  &.weather-rating-2
    background-color: lighten($pistachio, 32%)
    // background-color: lighten($cadet-blue, 45%)
  &.weather-rating-3
    background-color: lighten($maize-crayola, 45%)
  &.weather-rating-4
    // background-color: lighten($cg-blue, 45%)
    background-color: lighten($maize-crayola, 35%)
  &.weather-rating-5
  &.weather-rating-6
    // background-color: lighten($yellow-orange-color-wheel, 45%)
    background-color: lighten($orange-red, 45%)

  &.large-content
    justify-content: center
    position: relative
    overflow: hidden

    img.weather-icon
      position: absolute
      top: 25%
      right: 8%
      width: auto
      height: 180%
      z-index: 0
      margin: 0 0
      filter: invert(0%) sepia(0%) saturate(7484%) hue-rotate(313deg) brightness(93%) contrast(107%);
      opacity: 0.2

    .content
      position: absolute
      top: 0
      flex-direction: column
      justify-content: center
      align-items: flex-start

      .text
        position: relative
        width: 100%
        z-index: 1
        top: 0.2em
        flex-direction: row
        align-items: flex-end
        justify-content: flex-end

        p
          &.temp
            position: relative
            display: block
            line-height: 0.5em

          &.wind-pop
            font-size: 0.2em
            text-align: left
            display: block
            width: 100%
            position: relative
            // top: -35px

          sup
            position: absolute
            font-size: 0.2em
            top: 20%
            left: 100%
            display: block

          // .wind-pop
          //   font-size: 0.2em

  .content
    display: flex
    width: 100%
    padding: 5px 0 0 5px
    align-items: center
    justify-content: flex-start

    .text
      display: flex
      align-items: center
      justify-content: space-between

    p
      margin: 0

      sup
        font-size: 0.5em
        position: relative
        top: -9px

      &.temp
        font-size: 1.2em
        font-weight: 600
        line-height: 0.96em

      &.wind-pop
        margin-left: 5px
        font-size: 0.70em

dump_media_cache()