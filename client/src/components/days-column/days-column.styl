@import '~@/styles/mixins'
@import '~@/styles/variables'

.days-column
  height: 100vh
  display: flex
  justify-content: flex-start
  align-items: center
  flex-direction: column
  flex-grow: 1

  +media('lg')
    &:nth-last-child(-n+3)
      display: none

  .days
    display: flex
    width: 100%
    height: 100vh
    flex-direction: column
    position: relative
    min-height: 1000px

    .hours
      position: absolute
      height: 100%
      z-index: 1
      right: 0
      bottom: 0
      display: flex
      flex-direction: column
      justify-content: space-between

      .hour
        height: 4.16%
        display: flex
        justify-content: center
        align-items: center

        p
          padding: 0 5px
          margin: 0
          vertical-align: middle
          font-size: 0.6em



.date-header
  padding: 15px 0
  border-bottom: 3px solid #ffc0c0
  width: 100%
  text-align: center

  p
    margin: 0

  .date
    font-size: 4em
    font-weight: 600
    line-height: 1em

