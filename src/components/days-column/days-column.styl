@import '~@/styles/mixins'
@import '~@/styles/variables'

.days-column
  height: 93vh
  display: flex
  justify-content: flex-start
  align-items: center
  flex-direction: column
  flex-grow: 1

  .days
    display: flex
    width: 100%
    height: 150vh
    flex-direction: column
    position: relative
    min-height: 1000px

    .hours
      position: absolute
      height: 100%
      z-index: 1
      right: 0
      bottom: 0
      display: flex
      flex-direction: column
      justify-content: space-between

      .hour
        height: 4.16%
        display: flex
        justify-content: center
        align-items: center

        p
          padding: 0 5px
          margin: 0
          vertical-align: middle
          font-size: 0.6em



