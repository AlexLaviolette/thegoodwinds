@import '~@/styles/mixins'
@import '~@/styles/variables'

#map
  height: 100%

.title
  margin: 5px 0 20px
  color: $today-blue

p.error
  color: $white
  background: $err
  padding: 5px 10px
  font-weight: 600
  font-size: 16px
  text-align: left

.map-holder
  height: 350px
  border: 1px solid #cdcdcd

#pac-input
  width: 100%
  margin-bottom: 10px
  padding: 5px 10px
  border: 2px solid $today-blue
  font-size: 1em
  outline: 0;

  &.error
    border-color: $err;

#get-weather
  width: 100%
  display: flex
  justify-content: center
  align-items: center

  button
    background: $today-blue
    color: $white
    border: 0
    border-radius: 8px;
    margin: 10px 0 20px
    padding: 10px 20px
    cursor: pointer
    min-width: 40%
    font-size: 1.2em
    font-weight: bold

    &:hover
      background: $zomp

.close
  position: absolute
  right: 0
  top: 0
  height: 40px
  width: 40px
  line-height: 40px
  background: transparent
  border: 0
  font-size: 40px
  transition: color 0.4s ease
  color: $today-blue
  opacity: 0.8
  text-decoration: none

  &:hover
    opacity: 1
    color: $red-salsa
