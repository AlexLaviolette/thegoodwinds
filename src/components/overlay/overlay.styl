@import '~@/styles/mixins'
@import '~@/styles/variables'

#overlay
  position: fixed
  z-index: 100
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  display: flex
  align-items: center
  justify-content: center

  .shade
    position: absolute
    z-index: 1
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: black
    opacity: 0.5

  .content
    position: relative
    border-radius: 8px
    z-index: 2
    width: 80%
    height: min-content
    max-width: 800px
    text-align: center
    background: $light
    padding: 10px 20px

    +media('sm')
      width: 95%

dump_media_cache()