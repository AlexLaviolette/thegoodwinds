@import '~@/styles/mixins'
@import '~@/styles/variables'

#overlay
  position: fixed
  z-index: 100
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  display: flex
  align-items: center
  justify-content: center

  .shade
    position: absolute
    z-index: 1
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: black
    opacity: 0.5

  .content
    position: relative
    z-index: 2
    width: 80%
    max-height: 575px
    height: 80%
    max-width: 800px
    text-align: center
    background: $light
    padding: 40px
    overflow: scroll

    +media('sm')
      width: 95%

    .close
      position: absolute
      right: 0
      top: 0
      height: 40px
      width: 40px
      line-height: 40px
      background: transparent
      border: 0
      font-size: 40px
      transition: transform 0.3s ease
      color: $red-salsa
      opacity: 0.8
      text-decoration: none

      &:hover
        transform: rotate(-90deg)
        opacity: 1

