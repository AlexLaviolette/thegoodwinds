@import '~@/styles/mixins'
@import '~@/styles/variables'

#nav
  padding: 10px 20px 15px
  background: $dark-queen-blue
  display: flex
  flex-direction: row
  align-items: center
  justify-content: space-between
  height: 7vh

  +media('(max-height: 800px)')
    height: 13vh

  +media('md')
    position: fixed
    top: 0
    left 0
    width: 100%

.logo, p
  margin: 0
  color: $light

.logo
  font-weight: 400
  text-decoration: none
  font-size: 2em
  font-family: $title-font

  +media('sm-height')
    font-size: 1.2em

p
  font-size: 0.7em
  margin-left: 35px

  +media('sm-height')
    font-size: 0.5em
    margin-left: 20px

.links
  a
    text-decoration: none
    color: $light
    font-size: 1em
    font-weight: 600
    padding: 10px 20px

    +media('xs')
      padding: 5px

    &:hover
      text-decoration: underline
.btn
  background: transparent
  border: 1px solid $light
  border-radius: 8px
  +media('xs')
    span
      display: none
  +media('sm-height')
    font-size: 0.8em

  &:hover
    background: $light
    color: $dark-queen-blue
    text-decoration: none

dump_media_cache()